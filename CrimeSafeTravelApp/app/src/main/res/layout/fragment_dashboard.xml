<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bb"
    tools:context=".crimemap.DashboardFragment">

    <TextView
        android:id="@+id/txtTotalAmountOfCrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/a"
        android:text="Total Number of Crime"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtStreetWithHighestCrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dangrous Street"
        android:textAlignment="center"
        android:background="@color/b"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTotalAmountOfCrime"/>

    <TextView
        android:id="@+id/txtStreetWithLowestCrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Safest Street"
        android:textAlignment="center"
        android:background="@color/c"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtStreetWithHighestCrime"/>

    <TextView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Highest rated crime:
        Sexual offences"
        android:textAlignment="center"
        android:background="@color/d"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtStreetWithLowestCrime"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lowest rated crime: Vehicle crime"
        android:textAlignment="center"
        android:background="@color/a"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/a"/>

    <FrameLayout
        android:id="@+id/smsfragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkBeige"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detect Crime"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            >
        </TextView>


    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>